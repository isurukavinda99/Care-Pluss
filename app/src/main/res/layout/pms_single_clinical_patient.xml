<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pms_clinical_back"

    >

    <TextView
        android:id="@+id/pms_single_clinical_txt_pid"
        android:layout_width="48dp"
        android:layout_height="63dp"
        android:text="PID1"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/pms_single_clinical_patient_lname"
        android:layout_width="118dp"
        android:layout_height="40dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:text="Silva"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pms_single_clinical_txt_pid"
        app:layout_constraintStart_toEndOf="@+id/pms_single_clinical_txt_pid"
        app:layout_constraintTop_toTopOf="@+id/pms_single_clinical_txt_pid"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/pms_single_clinical_patient_fname"
        android:layout_width="97dp"
        android:layout_height="39dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="Saman"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pms_single_clinical_patient_lname"
        app:layout_constraintStart_toEndOf="@+id/pms_single_clinical_txt_pid"
        app:layout_constraintTop_toTopOf="@+id/pms_single_clinical_txt_pid" />

    <TextView
        android:id="@+id/pms_single_clinical_patient_bed_no"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Bed10"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pms_single_clinical_txt_pid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pms_single_clinical_txt_pid"
        app:layout_constraintVertical_bias="0.062" />
</androidx.constraintlayout.widget.ConstraintLayout>