<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Pms_patient_list"
    android:background="@drawable/pms_backg_one"




    >


    <TableLayout

        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        tools:context=".Pms_patient_list"
        android:gravity="center_vertical"

        >

        <TableRow
            android:background="@color/com_color_save"


            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="3dp"
                android:text="ID"
                android:textSize="20dp"

                android:textColor="@color/com_color_teal"
                android:background="@drawable/pms_box_small"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Name"
                android:textSize="20dp"
                android:textColor="@color/com_color_teal"
                android:background="@drawable/pms_box_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="D.O.B"
                android:textSize="20dp"
                android:textColor="@color/com_color_teal"
                android:background="@drawable/pms_box_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@string/pms_hint_patient_diagnosis"
                android:textSize="20dp"
                android:textColor="@color/com_color_teal"
                android:background="@drawable/pms_box_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@string/pms_bed_no"
                android:textSize="20dp"
                android:textColor="@color/com_color_teal"
                android:background="@drawable/pms_box_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Guardian"
                android:textSize="20dp"
                android:textColor="@color/com_color_teal"
                android:background="@drawable/pms_box_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Contact No"
                android:textSize="20dp"
                android:textColor="@color/com_color_teal"
                android:background="@drawable/pms_box_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Admitted"
                android:textSize="20dp"
                android:textColor="@color/com_color_teal"
                android:background="@drawable/pms_box_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@string/pms_action"
                android:textSize="20dp"
                android:textColor="@color/com_color_teal"
                android:background="@drawable/pms_box_small" />


        </TableRow>


    </TableLayout>

</RelativeLayout>